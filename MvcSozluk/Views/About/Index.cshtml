@using Entity.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 style="font-size: 1.8rem;">Hakkımızda</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-0">
                <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
                    Yeni Hakkımızda Yazı Girişi
                </button>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th style="width:5%">#</th>
                            <th>Hakkımda Başlığı</th>
                            <th>İşlemler</th>
                        </tr>
                    <thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AboutID</td>
                                <td>@item.AboutDetails1</td>
                                <td>
                                    <a href="#" class="btn btn-success">Aktif Yap</a>
                                    <a href="#" class="btn btn-danger">Pasif Yap</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Html.Action("AboutPartial","About")