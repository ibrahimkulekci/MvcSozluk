@using Entity.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Heading>
@{
    ViewBag.Title = "Heading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 style="font-size: 1.8rem;">Başlıklarım</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-0">
                <a href="/WriterPanel/NewHeading" class="btn btn-success">Yeni Başlık Ekle</a>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık Adı</th>
                            <th>Kategori</th>
                            <th>İşlemler</th>
                        </tr>
                    <thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.HeadingID</th>
                                <th>@item.HeadingName</th>
                                <td>@item.Category.CategoryName</td>
                                <td>
                                    <a href="#" class="btn btn-primary">Yazılar</a>
                                    <a href="/WriterPanel/EditHeading/@item.HeadingID" class="btn btn-warning">Güncelle</a>
                                    <a href="/WriterPanel/DeleteHeading/@item.HeadingID" class="btn btn-danger">Sil</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Heading", new { page }), new PagedListRenderOptions
           {
               LiElementClasses = new List<string>
               {"page-link"}
           })
    </div>
</div>

