@model Entity.Concrete.Writer
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 style="font-size: 1.8rem;">Profilim</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card card-primary">
            <!-- form start -->
            @using (Html.BeginForm("Profile", "WriterPanel", FormMethod.Post))
            {            
                <div class="card-body">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.WriterID)
                        @Html.Label("Kullanıcı Adı")
                        @Html.TextBoxFor(x=>x.WriterUsername, new { @class="form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("E-Mail")
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Şifre")
                        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Profil Resmi")
                        @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Hakkımda")
                        @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control" })
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary float-right">Güncelle</button>
                </div>
            }
        </div>
    </div>
</div>


