@model Entity.Concrete.Heading
@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 style="font-size: 1.8rem;">Yeni Başlık Ekle</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Başlık")
                        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.HeadingName, null, new { @class = "text-danger" })
                        <br />
                        @Html.Label("Kategori")
                        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
                        <br />
                        <button class="btn btn-success">Kaydet</button>
                        <a href="/WriterPanel/Heading" class="btn btn-danger">İptal</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>