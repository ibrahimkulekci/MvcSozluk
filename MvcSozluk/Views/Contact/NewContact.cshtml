@model Entity.Concrete.Contact
@{
    ViewBag.Title = "NewContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="well bs-component">
            @if (ViewBag.Message != null)
            {
                if (ViewBag.Status == "1")
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.Message
                    </div>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Message
                    </div>
                }
            }

            @using (Html.BeginForm("NewContact", "Contact", FormMethod.Post))
            {
                <legend>İletişim</legend>
                <div class="form-group">
                    @Html.Label("Ad Soyad:")
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                    <br />
                    @Html.Label("E-Mail:")
                    @Html.TextBoxFor(x => x.UserMail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserMail, null, new { @class = "text-danger" })
                    <br />
                    @Html.Label("Konu:")
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Subject, null, new { @class = "text-danger" })
                    <br />
                    @Html.Label("Mesaj:")
                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", rows = 8 })
                    @Html.ValidationMessageFor(x => x.Message, null, new { @class = "text-danger" })
                    <br />
                    <br />
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <button class="btn btn-primary btn-sm btn-block"><i class="fa fa-send"></i>Gönder</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

