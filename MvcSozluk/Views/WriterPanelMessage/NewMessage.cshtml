@model Entity.Concrete.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@section style
{
    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">
}
<div class="row">
    <div class="col-lg-12">
        <h1 style="font-size: 1.8rem;">Yeni Mesaj Oluştur</h1>
    </div>
</div>
<div class="row">
    @Html.Action("MessageListMenu", "WriterPanelMessage")
    <div class="col-md-9">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Yeni Mesaj Oluştur</h3>
            </div>
            <!-- /.card-header -->
            @using (Html.BeginForm("NewMessage", "WriterPanelMessage", FormMethod.Post))
            {
                <div class="card-body">
                    <div class="form-group">                        
                        @Html.TextBoxFor(x => x.ReceiverMail, new { placeholder = "Alıcı", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ReceiverMail)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Subject, new { placeholder = "Konu", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Subject)
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(x => x.MessageContent, new { placeholder = "Alıcı", @class = "form-control", @id = "compose-textarea" })
                        @Html.ValidationMessageFor(x => x.MessageContent)
                    </div>
                    <div class="form-group">
                        <div class="btn btn-default btn-file">
                            <i class="fas fa-paperclip"></i> Dosya Ekle
                            <input type="file" name="attachment">
                        </div>
                        <p class="help-block">Max. 32MB</p>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="float-right">
                        <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslak Ekle</button>
                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                    </div>
                    <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</button>
                </div>
            }
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>

</div>
@section scripts
{

    <!-- Summernote -->
    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- Page Script -->
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })
    </script>
}

