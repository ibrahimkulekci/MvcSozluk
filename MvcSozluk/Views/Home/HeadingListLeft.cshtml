@using Entity.Concrete
@model List<Heading>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yeni Başlıklar</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <ul class="products-list product-list-in-card pl-2 pr-2">
            @if (Model.Count <= 0)
            {
                <li class="item">
                    <div class="">
                        Henüz başlık eklenmemiştir.
                    </div>
                </li>
            }
            else
            {
                foreach (var item in Model)
                {
                    <li class="item">
                        <div class="">
                            <a href="/Heading/Content/@item.HeadingID" class="product-title text-body">
                                @item.HeadingName
                            </a>
                        </div>
                    </li>
                }
            }
        </ul>
    </div>
</div>
