@model Entity.Concrete.Writer
@{
    ViewBag.Title = "WriterLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="well bs-component">
            @using (Html.BeginForm("WriterLogin", "Login", FormMethod.Post))
            {
                <fieldset>
                    <legend>Giriş Yap</legend>
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h5><i class="icon fas fa-ban"></i> HATA!</h5>
                            E-mail veya Şifre alanı hatalı. Lütfen tekrar deneyiniz.
                        </div>
                    }
                <div class="form-group">
                    <label>E-mail</label>
                    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterMail, null, new { @class = "text-danger" })
                </div>
                <div class="form-group ">
                    @Html.Label("Şifre")
                    @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterPassword, null, new { @class = "text-danger" })
                </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <button class="btn btn-primary btn-sm btn-block"><i class="fa fa-send"></i> Giriş Yap</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

