@model Entity.Concrete.Writer
@{
    ViewBag.Title = "WriterRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="well bs-component">
            @using (Html.BeginForm("WriterRegister", "Login", FormMethod.Post))
            {
                <legend>Kayıt Ol</legend>
                <div class="form-group">
                    @Html.Label("Kullanıcı Adı")
                    @Html.TextBoxFor(x => x.WriterUsername, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterUsername, null, new { @class = "text-danger" })
                    <br />
                    @Html.Label("E-Mail")
                    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterMail, null, new { @class = "text-danger" })
                    <br />
                    @Html.Label("Şifre")
                    @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterPassword, null, new { @class = "text-danger" })
                    <small id="emailHelp" class="form-text text-muted">*şifre en az 6 karakter olmalı.</small>
                    <br />
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <button class="btn btn-primary btn-sm btn-block"><i class="fa fa-send"></i>Kayıt Ol</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

