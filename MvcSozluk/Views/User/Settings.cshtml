@model MvcProje1.Models.User.SettingsViewModel
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="h3">Ayarlar</h1>
    </div>
    <div class="col-lg-12">
        <div class="card card-primary">
            <!-- form start -->
            @using (Html.BeginForm("Settings", "User", FormMethod.Post))
            {
                <div class="card-body">
                    @ViewBag.Message
                    <div class="form-group">
                        @Html.HiddenFor(x => x.Writer.WriterID)
                        @Html.Label("Kullanıcı Adı")
                        @Html.TextBoxFor(x => x.Writer.WriterUsername, new { @class = "form-control", @readonly = "readonly", @Name = "" })
                    </div>
                    <div class="form-group">
                        @Html.Label("E-Mail")
                        @Html.TextBoxFor(x => x.Writer.WriterMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Yeni Şifre")
                        @Html.HiddenFor(x=>x.Writer.WriterPassword)
                        <input type="text" class="form-control" name="NewPassword"/>
                        <small>Yeni Şifre için alanı doldurun ve güncelleyin.</small>
                    </div>
                    <div class="form-group">
                        @Html.Label("Profil Resmi")
                        @Html.TextBoxFor(x => x.Writer.WriterImage, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Hakkımda")
                        @Html.TextAreaFor(x => x.Writer.WriterAbout, new { @class = "form-control" })
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary float-right">Güncelle</button>
                </div>
            }
        </div>
    </div>
</div>

