@using MvcProje1.Models.User
@model DisplayViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card card-widget widget-user">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-dark">
                <h3 class="widget-user-username">@Model.Writer.WriterUsername</h3>
            </div>
            <div class="widget-user-image">
                <img class="img-bordered elevation-2" src="@Model.Writer.WriterImage" alt="@Model.Writer.WriterUsername">
            </div>
            <div class="card-footer bg-white">
                <div class="row">
                    <div class="col-sm-6 border-right">
                        <div class="description-block">
                            <h5 class="description-header">@ViewBag.BaslikSayisi</h5>
                            <span class="description-text">Başlık</span>
                        </div>
                        <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-6 border-right">
                        <div class="description-block">
                            <h5 class="description-header">@Model.Content.Count</h5>
                            <span class="description-text">Yorum</span>
                        </div>
                        <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        @foreach (var item in Model.Content)
        {
            <div class="card card-widget">
                <div class="card-header">
                    <div class="user-block">
                        <span class=""><a href="/Heading/Content/@item.Heading.HeadingID" class="font-weight-bold text-body">@item.Heading.HeadingName</a></span>
                    </div>
                </div>
                <div class="card-body">
                    <p>
                        @item.ContentValue
                    </p>
                    <span class="float-right text-muted">11.108.2021 - <a href="/User/Index/@item.Writer.WriterID" class="text-black-50">@item.Writer.WriterUsername</a></span>
                </div>
            </div>
        }
    </div>
</div>

