@using Entity.Concrete
@model List<Heading>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 style="font-size: 1.8rem;">Başlıklar</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-0">
                <a href="/Heading/AddHeading" class="btn btn-success">Yeni Başlık</a>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th style="width:5%">#</th>
                            <th>Başlık</th>
                            <th style="width:10%">Yazar</th>
                            <th style="width:10%">Kategori</th>
                            <th style="width:10%">Tarih</th>
                            <th style="width:10%">Durum</th>
                            <th style="width:25%">İşlemler</th>
                        </tr>
                    <thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.HeadingID</th>
                                <td>@item.HeadingName</td>
                                <td>@item.Writer.WriterUsername</td>
                                <td>@item.Category.CategoryName</td>
                                <td>@(((DateTime)item.HeadingDate).ToString("dd.MM.yyyy"))</td>
                                <td>@Html.Raw(item.HeadingStatus == true ? "<span class='badge badge-success'>Aktif</span>" : "<span class='badge badge-danger'>Pasif</span>")</td>
                                <td>
                                    <a href="/Content/ContentByHeading/@item.HeadingID" class="btn btn-primary">Başlık Yazıları</a>
                                    <a href="/Heading/EditHeading/@item.HeadingID" class="btn btn-warning">Güncelle</a>

                                    @Html.Raw(item.HeadingStatus == true ? "<a href='/Heading/DeleteHeading/" + @item.HeadingID + "' class='btn btn-danger'>Pasif Yap</a>" : "<a href='/Heading/DeleteHeading/" + @item.HeadingID + "' class='btn btn-success'>Aktif Yap</a>")
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



