@model Entity.Concrete.HeadingContentAdd
@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="h3">Yeni Başlık Aç</h1>
    </div>
    <div class="col-lg-12">
        <div class="card card-widget">
            @using (Html.BeginForm("NewHeading", "Heading", FormMethod.Post))
            {            
            <div class="card-body">
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.HeadingName, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Kategori</label>
                    @Html.Label("Kategori")
                    @*@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })*@
                    @*@Html.DropDownListFor(x => x.CategoryID, new SelectList(ViewBag.vlc, "CategoryID", "CategoryName"))*@
                    @*@Html.DropDownList("CategoryID", new SelectList(ViewBag.vlc, "CategoryID", "CategoryName"))*@
                    @Html.DropDownList("CategoryID", (IEnumerable<SelectListItem>)ViewBag.vlc, null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>İçerik</label>
                    @Html.TextAreaFor(x => x.ContentValue, 3, 30, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ContentValue, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary float-right">Gönder</button>
            </div>
            }
        </div>
    </div>
</div>