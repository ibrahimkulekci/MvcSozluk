@model Entity.Concrete.Category

@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 style="font-size: 1.8rem;">Kategori Güncelle</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
                {
                <div class="form-group">
                    @Html.HiddenFor(x => x.categoryID)

                    @Html.Label("Kategori Adı")
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryName)
                    <br /><br />
                    @Html.Label("Kategori Açıklaması")
                    @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryDescription)
                    <br /><br />
                    <button class="btn btn-success">Güncelle</button>
                    <a href="/AdminCategory/Index" class="btn btn-danger">İptal</a>
                </div>
                }
            </div>
        </div>
    </div>
</div>

