@using Entity.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 style="font-size: 1.8rem;">Kategoriler</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-0">
                <a href="/AdminCategory/AddCategory" class="btn btn-success">Yeni Kategori</a>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    <thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <th>@item.categoryID</th>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryStatus</td>
                            <td>
                                <a href="/AdminCategory/DeleteCategory/@item.categoryID" class="btn btn-danger">Sil</a>
                                <a href="/AdminCategory/EditCategory/@item.categoryID" class="btn btn-warning">Güncelle</a>
                                <a href="#" class="btn btn-primary">Başlıklar</a>                                
                            </td>
                            
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

